
<div style='display:flex; gap:20px; justify-content:center;'>

    <div class='card mb-3 shadow-sm rounded' style='max-width:600px;'>
      <div class='card-body bg-light'>
        <p style='font-size:1.5rem;'><%= @flat.name %></p>
        <p><%= @flat.address %></p>
        <div style='display: flex; justify-content:flex-start; gap:12px;'>
          <div><i class="fa-solid fa-user" style='margin-right:4px;'></i><%= @flat.number_of_guests %></div>
          <div><i class="fa-solid fa-euro-sign" style='margin-right:4px;'></i><%= @flat.price_per_night %></div>
        </div>
        <p style='margin-top:20px;'><%= @flat.description %></p>

      </div>


    </div>

</div>
