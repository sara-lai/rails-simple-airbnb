<h1>All our flats (<%= @flats.length %>)</h1>


<div style='display:flex; gap:20px; flex-wrap: wrap;'>

  <% @flats.each do |flat| %>

    <div class='card mb-3 shadow-sm rounded' style='max-width:300px;'>
      <div class='card-body bg-light'>
        <p style='font-size:1.5rem;'><%= flat.name %></p>
        <p><%= flat.address %></p>
        <div style='display: flex; justify-content:flex-start; gap:12px;'>
          <div><i class="fa-solid fa-user" style='margin-right:4px;'></i><%= flat.number_of_guests %></div>
          <div><i class="fa-solid fa-euro-sign" style='margin-right:4px;'></i><%= flat.price_per_night %></div>
        </div>

      </div>

      <div class='card-footer bg-white'>
        <div style='display:flex; gap:10px;'>
          <%= link_to "More info", flat_path(flat) %>
          <%= link_to "Edit", edit_flat_path(flat) %>
          <%= link_to "Delete", flat_path(flat), data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this?' }%>
        </div>
      </div>

    </div>
  <% end %>
</div>
